/** IMAGE WIDGET **/
.block {position: relative;}
.tool-remove {position: absolute; width:16px; height:16px; display: block; bottom:0; right: 0px; cursor:pointer;
                  background: url("css-framework/i/fsi-icons/delete.png") no-repeat scroll center transparent;}
.tool-change {position: absolute; width:16px; height:16px; display: block; bottom:0; right: 0px; cursor:pointer;
                background: url("css-framework/i/fsi-icons/asterisk_orange.png") no-repeat scroll center transparent;}

.ui-state-highlight {}

.image-single {
   overflow:hidden; width:100%;
  .block {margin: 5px; overflow: hidden; float:left; width:120px; height:120px; position: relative;}
  &.hover { outline: 4px dashed #8dc8e6; }
}

.image-gallery {
   overflow:hidden; width:100%;
  .block {margin: 5px; overflow: hidden; float:left; width:120px; height:120px;}
  &.hover { outline: 4px dashed #8dc8e6; }
}

.image-carousel {
  overflow:hidden; margin:5px auto; width: 100%;
  .block {margin: 5px; overflow: hidden; float:left; width:120px; height:120px;}
  .arrow {width: 35px; height: 40px; position: relative; top: 42px; display: block; float: left; cursor: pointer; display: block; text-indent: -10000000px;background-position: center center; background-repeat: no-repeat;}
  .next, .prev, .carousel {float: left;}
  &.hover { outline: 4px dashed #8dc8e6; }
  ul {padding:0 !important;}
  li {padding: 0;}

  &.edit {
    .block {margin: 5px; overflow: hidden; float:left; width:120px; height:120px;}
  }
}

.drop-tip {outline: 2px solid #8dc8e6; -moz-outline-radius:10px; padding:20px 0; width:90%; text-align:center; margin: 5px 0; overflow: hidden; float:left; position: relative; left:5%; outline-offset: -10px;
  .file_open {background-color: #8DC8E6; border-radius: 10px; color: white; display: block; margin: 5px auto; padding: 5px 10px; width: 80px;
    &:hover {background-color: #ccc; cursor: pointer;}
  }
}

.loading {background-color: #000; opacity: 0.6; width: 100%; height: 100%; position: absolute; top:0; left:0; z-index: 1000;}


