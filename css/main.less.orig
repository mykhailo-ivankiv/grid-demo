  button { background: url("../images/icons.png") no-repeat center; height: 20px; width: 20px; cursor:pointer}
  .button-bold       { background-position: 0 -304px;}
  .button-italic     { background-position: 0 -320px;}
  .button-underline  { background-position: 0 -336px;}
  .button-hiliteColor{ background-position: 0 -720px;}
  .color-palette     { position: absolute; display: none;z-index: 100;width: 200px;height: 200px;background: #D0D3CC;}
  .button-foreColor  { background-position: 0 -704px;}
  .button-insertUnorderedList  { background-position: 0 -416px;}
  .button-insertOrderedList  { background-position: 0 -400px;}
  .button-justifyLeft   { background-position: 0 -464px;}
  .button-justifyRight  { background-position: 0 -496px;}
  .button-justifyCenter {background-position: 0 -480px;}
  .button-redo  { background-position: 0 -224px;}
  .button-undo  { background-position: 0 -208px;}
  .button-removeFormat  { background-position: 0 -288px;}
  .button-insertImage   { background-position: 0 -576px;}

  .color-palette-container { position:relative;float:left }
  .color-palette           { display:none;position:absolute }
}

.wysiwygEditor {
  .drop-tip                  { outline: 2px dashed #8dc8e6; -moz-outline-radius : 10px; padding: 20px 5px 0; width: 200px; height: 200px; text-align: center; margin: 5px; overflow: hidden; float: left; }
  .drop-tip .file-open       { background-color: #8dc8e6; padding: 5px 10px; display: inline-block; float: none; border-radius: 10px; color: white; }
  .drop-tip .file-open:hover { background-color: #ccc; cursor: pointer; }
}


.insertImage{position: absolute;min-height: 300px; width: 220px; left: 50%; top: 50%; margin: -150px 0 0 -150px;display: none;z-index: 100;background: #EEEEEE; box-shadow: 3px 6px 10px 4px; border-radius: 5px 0px 5px 5px;}
.insertImage .button-popUp-close {float: right; width:20px; height:20px;margin-right: -20px;background: #EEEEEE ;border-radius: 0 10px 10px 0; text-align: center;cursor: pointer;box-shadow: 6px 6px 8px 2px;}
.image-preview {width:100%;}
