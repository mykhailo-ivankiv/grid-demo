/* Reset style */
html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, font, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, center, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td { margin: 0; padding: 0; border: 0; outline: 0; vertical-align: baseline; background: transparent; }
body { line-height: 1;  font-size: 12px;}
ol, ul { list-style: none; }
blockquote, q { quotes: none; }
blockquote:before, blockquote:after, q:before, q:after { content: ''; content: none; }
:focus { outline: 0; }
ins { text-decoration: none; }
del { text-decoration: line-through; }
table { border-collapse: collapse; border-spacing: 0; }

/* Clear fix */
.clearfix:after { content: "."; display: block; clear: both; visibility: hidden; line-height: 0; height: 0; }
.clearfix { display: inline-block; }
html[xmlns] .clearfix { display: block; }
* html .clearfix { height: 1%; }


.main-template {
  .droppable { background: white; border: 1px solid #D0D3CC; margin: 0; min-height: 100px;}
}

.wrapper {
  margin: auto; width: 950px; background-color:white; padding: 15px; position: absolute; left:10px; right:10px;
}


#mainCanvas {
  width: 520px; min-height: 500px; background-color: #f7f7f7; margin-left: 130px;

  .active { z-index: 2; -moz-outline-radius: 13px 13px 13px 13px; outline: 10px solid #8DC8E6; }
}

/* RIGHT AND LEFT TOOLS CONTAINERS */
.tools {
  background-color: #f7f7f7;
  h3 { margin: 20px 0; background-color: #0088CC; color: white; padding: 8px 0 8px 8px; text-align: left; font-weight: bold; font-size: 12px}
}

.r-tools{ margin-left: 660px; width: 315px; position:fixed; }
.l-tools{ position: fixed; width: 190px; text-align: right; width: 120px; }

/* TOOLS ITEM */
.tools-item{
    background-color: white; border: 1px solid #d0d3cc; border-radius: 5px; cursor: pointer; display: inline-block; font-size: 8px; height: 50px;
    margin: 4px; padding: 0; position: relative; text-align: center; width: 50px; z-index: 99; color: #6f6f6f; float:left;

    .tools-arrow { border-top: 4px solid #9c9791 !important; border-right: 4px solid transparent !important; border-left: 4px solid transparent !important; border-bottom: none;
                   background: none; height: 0; width: 0; padding: 0; margin: 0;  position: absolute; right: 2px; bottom: 2px; display:block;}

    .tools-subitems {display:none;}
    &:hover {background-color: #e0eef9}

    img { width: 32px; height: 32px; display: block; margin: 2px auto; }

    &.ui-draggable-dragging {
     .tools-arrow, .tools-subitems  {display: none !important;}
    }

    &.open { z-index: 100;
     .tools-subitems {display:block;}
     .tools-arrow { display: none;}
    }
}

.tools-subitems {
  width: 180px; height: auto; position: absolute; left: -1px; top:45px; clear: both; padding: 0; background-color: white; text-align: left;
  border: 1px solid #d0d3cc; border-radius: 0 5px 5px 5px;

  &:before {background-color: white; content: ""; display: block; height: 1px; left: 0; position: absolute; top: -1px; width: 50px;}
  &:hover:before {background-color: #e0eef9;}

  .tools-item{
    width:100%; height:auto; border: none; clear: both; margin:0; padding:0; line-height:30px; text-align: left;
    &:first-child {border-radius: 0 5px 5px 5px;}

    img {float: left;}
    &:hover {background-color: #e0eef9}
  }
}

/* LEFT TOOLS */
#widgets, #themes, #clipboard {
  text-align: left; width: 100%;
}


/* RIGHT TOOLS */
.sub-config {
  margin: 10px 10px 10px 15px; width:auto; background-color: white;
  h3 {background-color: #8dc8e6; margin: 0;}
}

/* CATEGORY SWITCHER */
#categorySwitcher{
  .categories {
    padding: 0; margin:0;

    ul {
      li {
        margin:0; padding: 10px 0;
        background-position: left center  !important; background-repeat:no-repeat  !important; background-color:#fff !important;
        padding-left: 45px  !important;  cursor: pointer;
        &:hover,&.active {background-color: #e0eef9 !important;}
      }
    }

  }
}

/* LAYERS */
#layers {
  .layers {
    padding: 0px 10px 15px 15px; margin:0;

    ul {
        li {
          margin:0; padding: 18px 0px 2px 0px; border-bottom: 1px solid #9c9791;
          cursor: pointer;
          &:hover,&.active {background-color: #e0eef9 !important;}
        }
      }

  fieldset {width: auto; clear: both; margin:3px 0;
    input {height: 100%; margin: 4px 0; padding: 2px;float:left; }
    .remove-image {display: block; width: 30px; height:30px; border-radius: 20px; cursor: pointer;
      float:left; margin-left:5px; background: url("css-framework/i/fsi-icons/image_delete.png") no-repeat scroll center #5F9EA0; text-indent: -100000px;

      &:hover {background: url("css-framework/i/fsi-icons/image_delete.png") no-repeat scroll center #CCCCCC;}
    }
  }
}

/* BUILD */
#build .build form {
  padding: 10px 10px 15px 15px;

  label{
    display: block; clear: both; float:none; overflow: hidden;
    text-align: right;
    border-bottom: 1px solid #9c9791; padding: 2px 0;
    &:hover {background-color: #E0EEF9;}

    span {float: left; width: 40%; display: block; text-align: left;padding-top: 14px; text-transform: lowercase}
    input, select {
      height: 24px; border: 1px solid #9c9791; color: #666666;
      &:focus {background-color: #F7F7F7;}
    }
  }
}

#widgetModeSwitcher {width: 30px; height:30px; background-color:#8DC8E6; border-radius: 20px; display:none; position:absolute; z-index:100; cursor:pointer;
  &:before {position: absolute; width:100%; height:100%; background: url("css-framework/i/fsi-icons/edit.png") no-repeat scroll center transparent; content:""}
  &.edit:before {background: url("css-framework/i/fsi-icons/finished-work.png") no-repeat scroll center transparent; }

  &:hover {
      background: rgb(141,200,230); /* Old browsers */
      background: -moz-linear-gradient(45deg,  rgba(141,200,230,1) 40%, rgba(224,238,249,1) 100%); /* FF3.6+ */
      background: -webkit-gradient(linear, left bottom, right top, color-stop(40%,rgba(141,200,230,1)), color-stop(100%,rgba(224,238,249,1))); /* Chrome,Safari4+ */
      background: -webkit-linear-gradient(45deg,  rgba(141,200,230,1) 40%,rgba(224,238,249,1) 100%); /* Chrome10+,Safari5.1+ */
      background: -o-linear-gradient(45deg,  rgba(141,200,230,1) 40%,rgba(224,238,249,1) 100%); /* Opera 11.10+ */
      background: -ms-linear-gradient(45deg,  rgba(141,200,230,1) 40%,rgba(224,238,249,1) 100%); /* IE10+ */
      background: linear-gradient(45deg,  rgba(141,200,230,1) 40%,rgba(224,238,249,1) 100%); /* W3C */
  }
}


